<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerScreen"
    android:background="#BAABBD">

    <TextView
        android:id="@+id/manager_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Witaj admin"
        android:gravity="center"
        android:background="#6D6DEF"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/pracownicy_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/manager_name"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Pracownicy"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24dp" />

    <ScrollView
        android:id="@+id/scrollViewManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pracownicy_title"
        android:background="#D9D9D9"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="100dp">

    </ScrollView>



</RelativeLayout>