<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statystyki"
    android:background="#BAABBD">

    <TextView
        android:id="@+id/text_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Statystyki"/>

    <Button
        android:id="@+id/button_god"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/text_stat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:text="godziny pracy"
        android:background="#90C8BB"/>

    <Button
        android:id="@+id/button_ur"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="urlopy"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text_stat"
        android:layout_marginBottom="140dp"
        android:background="#90C8BB"/>

    <Button
        android:id="@+id/button_arz"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="archiwum zadań"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/text_stat"
        android:layout_marginBottom="80dp"
        android:background="#90C8BB"/>

    <Button
        android:id="@+id/button_back2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_stat"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="80dp"
        android:background="#6D6DEF"
        android:text="Powrót" />

</RelativeLayout>